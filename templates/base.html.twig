<!DOCTYPE html>
<html lang="en">
<head>
    <title>Shows v3</title>
    <link rel="stylesheet" href="{{ asset('build/style.css') }}">
    <script src="{{ asset('build/app.js') }}"></script>
    <script>
        window.baseUrl = '{{ path('home') }}';
    </script>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="#">Shows v3</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('home') }}">Sample</a>
                </li>
                <li class="nav-item">
                    {{ render(controller('App\\Controller\\SearchController::searchForm')) }}
                </li>
                {% if app.user.username is defined %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('unwatched_index') }}">
                            <i class="fa fa-eye-slash" aria-hidden="true"></i> {{ 'menu.unwatched'|trans }}
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('shows_index') }}">
                            <i class="fa fa-film" aria-hidden="true"></i> {{ 'menu.shows'|trans }}
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('shows_index', {'status': '2'}) }}">
                            <i class="fa fa-archive" aria-hidden="true"></i> {{ 'menu.archived_shows'|trans }}
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('user_settings') }}">{{ 'menu.settings'|trans }}</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('fos_user_security_logout') }}">{{ 'menu.logout'|trans }}</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('fos_user_registration_register') }}">{{ 'menu.register'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('fos_user_security_login') }}">{{ 'menu.login'|trans }}</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<div id="content" class="container p-1">
    {% block body %}{% endblock %}
</div>
</body>
</html>
