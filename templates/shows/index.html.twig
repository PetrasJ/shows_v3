{% extends 'base.html.twig' %}

{% block body %}
    {{ shows|length }}<br>
    {% for show in shows %}
        {{  show.name }} {{ show.episodesCount }} {{ show.watchedCount }}
        {% if show.lastEpisode %}
            last: {{ show.lastEpisode.modifiedDate|dateTimezone }}
        {% endif %}
        {% if show.nextEpisode %}
            next: {{ show.nextEpisode.modifiedDate|dateTimezone }}
        {% endif %}
        <br>
    {% endfor %}
{% endblock %}
